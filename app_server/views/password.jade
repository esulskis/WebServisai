extends layout
block content
  .container
    h1 Slaptažodžio pakeitimas
    form(method="POST")
      input(name='oldPassword', placeholder='Senas slaptažodis', type='password')
      input(name='newPassword', placeholder='Naujas slaptažodis', type='password')
      input.submitButton(name='changePassword', value='Pakeisti slaptažodi', type='submit')
    -if(message)
      div#note #{message}
